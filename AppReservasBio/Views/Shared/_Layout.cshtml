<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservas Biotecnología</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppReservasBio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Reservas" asp-action="Crear">
                    <img src="~/img/udla.png" style="height: 35px; color: #fefefe;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav justify-content-center">
                        @if(!User.Identity.IsAuthenticated){
                            <!-- Este es para que lleve al calendario con los modulos disponibles -->
                            <li class="nav-item justify-content-center">
                                    <a class="nav-link text-dark fs-5 bi bi-calendar2-week-fill text-white" asp-area="" asp-controller="Reservas" asp-action="Calendario"></a>
                            </li>
                            <!-- Este es para que lleve a la opcion de crear una reserva -->
                            <li class="nav-item justify-content-center">
                                    <a class="nav-link text-dark fs-5 bi bi-pencil-square text-white" asp-area="" asp-controller="Reservas" asp-action="Crear"></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item justify-content-center">
                                    <a class="nav-link text-dark fs-5 bi bi-hammer text-white" asp-area="" asp-controller="Reservas" asp-action="CrearMantenimiento"></a>
                            </li>
                            <li class="nav-item justify-content-center">
                                <a class="nav-link text-dark fs-5 bi bi-inboxes-fill text-white" asp-area="" asp-controller="Reservas" asp-action="Listado"></a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- Este es para que lleve al controlador de usuarios a login como administrador -->
                <a class="navbar-brand fs-4 bi bi-person-fill text-white" asp-area="" asp-controller="Cuenta" asp-action="Login"></a>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-area="" asp-controller="Cuenta" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link navbar-brand fs-4 bi bi-box-arrow-right text-white" style="text-decoration: none;"></button>
                    </form>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-white">
            &copy; 2025 - Reservas Biotecnología - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
