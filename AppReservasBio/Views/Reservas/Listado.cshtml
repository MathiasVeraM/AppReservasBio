@model List<AppReservasBio.Models.Reserva>
@{
    ViewData["Title"] = "Listado de Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Listado de Reservas</h2>

<table class="table bg-white table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Fecha</th>
            <th>Laboratorio</th>
            <th>Módulo</th>
            <th>Estudiantes</th>
            <th>Equipos</th>
            <th>Reactivos</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@r.Laboratorio.Nombre</td>
                <td>@r.ModuloHorario.Nombre</td>
                <td>
                    <ul class="mb-0">
                        @foreach (var est in r.Estudiantes)
                        {
                            <li>@est.Nombre (@est.Cedula)</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul class="mb-0">
                        @foreach (var eq in r.Equipos)
                        {
                            <li>@eq.Nombre</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul class="mb-0">
                        @foreach (var rr in r.ReservaReactivos)
                        {
                            <li>@rr.Reactivo.Nombre: @rr.Cantidad</li>
                        }
                    </ul>
                </td>
                <td>
                    @if (r.Aprobado)
                    {
                        <span class="badge bg-success">Aprobada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                </td>
                <td>
                    <form asp-action="Aprobar" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@r.Id" />
                        <button type="submit" class="btn btn-success btn-sm" @(r.Aprobado ? "disabled" : "")>Aprobar</button>
                    </form>
                    <form asp-action="Rechazar" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@r.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" @(r.Aprobado ? "" : "disabled")>Rechazar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>